<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    tools:context="com.example.testguo.timer.MainActivity">

    <fragment
        android:id="@+id/fragmentalarmabove"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:name="com.example.testguo.timer.AlarmAbove">
    </fragment>

    <fragment
        android:id="@+id/fragmentalarmdown"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:name="com.example.testguo.timer.AlarmDown">
    </fragment>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorStopWatch">

    <TextView
        android:id="@+id/textViewAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_marginStartPercent="14%"
        app:layout_marginTopPercent="7%"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:text="闹钟" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textViewAlarm"
        android:layout_toEndOf="@id/textViewAlarm"
        app:layout_marginLeftPercent="10%"
        android:text="时钟"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewStopWatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textViewTime"
        android:layout_toEndOf="@id/textViewTime"
        app:layout_marginLeftPercent="10%"
        android:text="秒表"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textViewStopWatch"
        android:layout_toEndOf="@id/textViewStopWatch"
        app:layout_marginLeftPercent="10%"
        android:text="计时器"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="30%"
        android:layout_alignParentStart="true"
        app:layout_marginLeftPercent="30%"
        android:text="00"
        android:textColor="@android:color/background_dark"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/semicolon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/minute"
        android:layout_toEndOf="@+id/minute"
        android:text=":"
        android:textColor="@android:color/background_dark"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/minute"
        android:layout_toEndOf="@+id/semicolon"
        android:text="00"
        android:textColor="@android:color/background_dark"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/minute"
        android:layout_toEndOf="@+id/second"
        android:text="."
        android:textColor="@android:color/background_dark"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/longmill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/minute"
        android:layout_toEndOf="@+id/point"
        android:text="0"
        android:textColor="@android:color/background_dark"
        android:textSize="50sp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="75%"
        app:layout_marginStartPercent="20%"
        android:text="复位"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_and_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="75%"
        app:layout_marginStartPercent="60%"
        android:text="启动"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.percent.PercentRelativeLayout>